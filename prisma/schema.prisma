generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recipe {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  food1 String
  food2 String
  title String
  description String
  image String?
  // description String @db.Text
  // image String? @db.Text
  @@unique([food1, food2])
}